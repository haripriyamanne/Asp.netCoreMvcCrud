@model IEnumerable<Asp.netCoreMvcCrud.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h4>Employee Details</h4>

<table class="highlight">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyLimited)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyWebsite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Busineess)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Benifits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListProducts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrustElements)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImportantAreas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WebsiteExample)
            </th>
            <th>
                <a asp-action="AddorEdit" class="btn btn-outline-success">Add a Employee</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyLimited)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyWebsite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Busineess)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Benifits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ListProducts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrustElements)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImportantAreas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WebsiteExample)
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.EmployeeId">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.EmployeeId" class="text-danger ml-1" onclick="return confirm('Are you sure to delete this record?')">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
